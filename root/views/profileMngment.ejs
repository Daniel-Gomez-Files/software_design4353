<body>
    <!--<div class="col-m-10 p-5"></div>
 <h1  class = "bg-primary">Profile Management</h1> -->
    <div class="header">
        <h1>Profile Management</h1>
    </div>

    <div class="nonheader">
        <h2> Hello there, welcome to the profile completion page. Please fill in the information required below </h2>
        <br><!-- /?_method=PATCH -->
        <form id="profMngForm" action="profMngment.ejs?_method=PATCH" action="POST">
            <div>
                <label for="name">Full Name: </label>
                <input type="text" name="fullName" id="fullName" placeholder="Enter full name here" maxlength="50"
                    required>
            </div>
            <br>
            <div>
                <label for="userAddress1">Address 1: </label>
                <input type="text" name="userAddress1" id="userAddress" placeholder="Enter Address 1 here"
                    maxlength="100" required>
            </div>
            <br>
            <div>
                <label for="userAddress2">Address 2: </label>
                <input type="text" name="userAddress2" id="userAddress2" placeholder="Enter Address 1 here"
                    maxlength="100">
            </div>
            <br>
            <div>
                <label for="City">City: </label>
                <input type="text" name="userCity" id="userCity" placeholder="Enter City here" maxlength="100">
            </div>
            <br>
            <div>
                <label for="State">State: </label>
                <select name="userState" id="userState">
                    <option value="State">TX</option>
                    <option value="State">CA</option>
                    <option value="State">NY</option>
                </select>
            </div>
            <br>
            <div>
                <label for="ZipCode">ZipCode: </label>
                <input type="text" name="userZipcode" id="userZipcode" placeholder="Enter Zip Code here" minlength="5"
                    maxlength="8">
            </div>
            <br>
            <div class="form-submit">
                <button>submit</button>
            </div>
        </form>
    </div>
    </div>
    <div id="content">
        <img src="https://logodix.com/logo/1577263.png" alt="UH Logo">
    </div>
    <a href="/index.ejs" id="homePageLink">Back to home page</a>
